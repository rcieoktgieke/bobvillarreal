<script>
  var almagroDiv, valdiviaDiv, pizarroDiv;
  function viewAlmagro() {
    almagroDiv.style.display = 'block';
    valdiviaDiv.style.display = 'none';
    pizarroDiv.style.display = 'none';
  }
  function viewValdivia() {
    almagroDiv.style.display = 'none';
    valdiviaDiv.style.display = 'block';
    pizarroDiv.style.display = 'none';
  }
  function viewPizarro() {
    almagroDiv.style.display = 'none';
    valdiviaDiv.style.display = 'none';
    pizarroDiv.style.display = 'block';
  }
  window.onload = function () {
    almagroDiv = document.getElementById("almagro-div");
    valdiviaDiv = document.getElementById("valdivia-div");
    pizarroDiv = document.getElementById("pizarro-div");
    var viewAlmagroButton = document.getElementById("view-almagro-a");
    var viewValdiviaButton = document.getElementById("view-valdivia-a");
    var viewPizarroButton = document.getElementById("view-pizarro-a");
    viewAlmagroButton.addEventListener("click", viewAlmagro );
    viewValdiviaButton.addEventListener("click", viewValdivia );
    viewPizarroButton.addEventListener("click", viewPizarro );
  }
</script>
