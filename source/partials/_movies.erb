<% if defined? media_entry
	movies_info = media_entry
end %>
<div class="content-container-div" id="movies-container-div">
	<% movies_info["movies"].each do |movie| %>
		<h2><%= movie["title"] %></h2>
		<p><%= movie["note"] %></p>
  	<div class="movie-div embedded-movie-container-div">
			<% if movie["url"] %>
				<iframe class="movie-vimeo-iframe default-player" src="<%= movie["url"] %>" width="640" height="480" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
			<% end %>
			<% if movie["filename"] %>
				<video class="movie-html-video fallback-player" width="640" height="480" controls="">
					<source src="https://bobvillarreal.com/movies/<%= movie["filename"] %>" type="video/mp4" />
				</video>
			<% end %>
			<% if movie["url"] && movie["filename"] %>
				<p>
					<a class="player-selector-a">If the movie is not playable, click here for an alternative player</a>
				</p>
			<% end %>
		</div>
	<% end %>
	</div>
</div>
